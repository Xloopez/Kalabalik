<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clipChildren="false"
    app:layout_constraintBottom_toTopOf="@id/guideline_card_bottom"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/guideline_card_top"
    tools:background="@color/deep_purple_200">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_cardType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CONSEQUENCE"
        style="@style/CardStyleType" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_conOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Consequence 1"
        style="@style/CardStyleContent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_plusSign"
        style="@style/RoundsStylePlus"
        app:layout_constraintBottom_toBottomOf="@id/textView_conOne_points"
        app:layout_constraintEnd_toStartOf="@id/textView_conOne_points"
        app:layout_constraintTop_toTopOf="@id/textView_conOne_points"
        tools:text="+" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_conOne_points"
        style="@style/CardStylePoint"
        app:layout_constraintBottom_toBottomOf="@id/textView_conOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="0" />


</androidx.constraintlayout.widget.ConstraintLayout>